@using PagedList
@using PagedList.Mvc
@model IEnumerable<CMS_Practice.Models.Article>
@{
    ViewBag.Title = "文章列表";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-8">
        @Html.ActionLink("發佈新主題", "Create", "Articles", null, new { @class = "btn btn-danger" })
        @Html.ActionLink("全部資料", "Index", "Articles", null, new { @class = "btn btn-primary" })
    </div>
    <div class="col-md-4">
        @using (Html.BeginForm("Index", "Articles", new { area = "Admin" },
        FormMethod.Get, new { @class = "navbar-form navbar-left", role = "search" }))
        {
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Search" name="searchTxt" />
            </div>
            <button type="submit" class="btn btn-default">搜尋</button>
        }
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <table class="table table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Subject)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Summary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContentText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsPublich)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PublishDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateUser)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdateUser)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdateDate)
                </th>
                <th>
                    管理功能
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Summary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContentText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsPublich)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PublishDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateUser)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdateUser)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdateDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) ｜
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) ｜
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-md-12">
        @Html.PagedListPager((IPagedList)Model, x => Url.Action("Index", new { page = x }))
    </div>
</div>

